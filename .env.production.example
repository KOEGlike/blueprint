# .env.production.example
# Template for production environment variables. Provision these via your secrets manager.

# Application
APPLICATION_HOST=your-domain.tld

# PostgreSQL
DATABASE_URL=postgresql://USER:PASS@HOST:5432/blueprint_production

# Slack
SLACK_CLIENT_ID=0000000000.0000000000
SLACK_CLIENT_SECRET=changeme
SLACK_BOT_TOKEN=xoxb-your-prod-bot-token
SLACK_CHANNELS=C0123456789,C0123456790

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Mailer
EMAIL_FROM=ops@example.com
EMAIL_TOKEN=changeme
EMAIL_AIRTABLE_WEBHOOK=https://hooks.airtable.com/workflows/v1/genericWebhook/your_app/your_workflow/your_trigger

# Monitoring
SKYLIGHT_AUTHENTICATION=changeme

# Cloudflare R2
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET=blueprint-prod
CLOUDFLARE_R2_ENDPOINT=https://<account_hash>.r2.cloudflarestorage.com

# SUPER SENSITIVE (DO NOT COMMIT REAL VALUES)
SLACK_XOXC=xoxc-your-token
SLACK_XOXD=xoxd-your-token
