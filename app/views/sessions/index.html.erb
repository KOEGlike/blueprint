<% content_for :title, "Log in - Blueprint" %>

<% content_for :head do %>
  <meta name="robots" content="noindex">
<% end %>

<div class="min-h-screen flex items-center justify-center">
  <div class="border-2 border-white/25 bg-hatch p-12 space-y-12">
    <div class="text-center">
      <h1 class="text-4xl">Hey! Welcome to Blueprint!</h1>
      <p>If you don't already have an account, we'll make one for you<p>
    </div>
    <div class="flex flex-col items-center space-y-4">
      <%= render "shared/button", url: slack_login_path, text: "Log in with Slack", class: "text-xl w-full"%>
      <div class="w-full flex items-center before:p-[1px] before:mr-2 before:bg-white before:grow after:p-[1px] after:ml-2 after:bg-white after:grow uppercase">or</div>
      <div class="w-full">
        <%= turbo_frame_tag "login_form" do %>
          <%= render partial: "email_form" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


