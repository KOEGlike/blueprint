<%= form_with url: login_email_path, method: :post do |f| %>
    <div class="flex flex-col space-y-4">
      <%= f.email_field :email, required: true, class: "input placeholder-white/75", placeholder: "Your email" %>
      <%= f.submit "Send login code", class: "btn btn-outline w-full" %>
    </div>
<% end %>
