<%= link_to project_path(project) do %>
    <%= render "shared/card", class: "space-y-6 hover:scale-105 hover:shadow-xl motion-safe:transition-all" do %>
        <div class="h-48 bg-gray-200 bg-cover bg-center -mt-6 -mx-8" style="background-image: url(<%= project.banner.attached? ? url_for(project.banner) : nil %>)">
        </div>
        <div>
            <p class="text-2xl"><%= project.title %></p>
            <p><%= project.description.empty? ? "No description yet" : project.description %></p>
        </div>
    <% end %>
<% end %>
