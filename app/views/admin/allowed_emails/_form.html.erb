<%= form_with model: @allowed_email, url: admin_allowed_emails_path, class: "space-y-2 flex" do |f| %>
  <%= f.text_area :email, placeholder: "email@example.com or paste comma/space-separated list", class: "w-full h-24 p-2 border rounded" %>
  <%= f.submit "Add", class: "btn btn-outline ml-2 self-start" %>
<% end %>
