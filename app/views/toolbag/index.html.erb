<div class="p-8">
  <div class="max-w-6xl mx-auto">    
    
    <!-- Points Balance -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center gap-2 bg-bp-darker border-2 border-white/25 px-6 py-3">
        <span class="text-lg">Your Balance:</span>
        <span class="text-2xl font-bold text-bp-warning"><%= current_user.tickets %> tickets</span>
      </div>
    </div>
    
    <h1 class="text-5xl font-bold text-center mb-12">Blueprint Toolbag</h1>
    <p class="text-center text-lg mb-16">Welcome <%= current_user.display_name %>! Spend your tickets on amazing rewards.</p>
    
    <!-- Tool Bag Items Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <% @items.each do |item| %>
        <div class="flex flex-col border-2 border-white/25 bg-hatch p-6 transition-colors" style="border-color: rgba(255, 255, 255, 0.25);">
          <div class="w-full h-48 mb-4 flex items-center justify-center" style="background-color: var(--color-bp-darker);">
            <img src="<%= item["image_url"] %>" alt="<%= item["name"] %>" class="max-h-full max-w-full object-contain" />
          </div>
          <h3 class="text-xl font-bold mb-2"><%= item["name"] %></h3>
          <p class="text-sm mb-4" style="color: rgba(255, 255, 255, 0.8);"><%= item["description"] %></p>
          <div class="mt-auto">
            <div class="flex items-center justify-between mb-2">
              <span class="text-lg font-bold text-bp-warning"><%= item["price_tickets"] %> tickets</span>
            </div>
            <button class="w-full py-2 px-6 text-xl border-2 cursor-not-allowed" style="background-color: var(--color-bp-darker); border-color: rgba(255, 255, 255, 0.3); color: rgba(255, 255, 255, 0.5);" disabled>You can't afford this</button>
          </div>
        </div>
      <% end %>

    </div>
    
  </div>
</div>
