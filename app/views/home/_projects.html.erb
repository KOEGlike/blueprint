<%= render "shared/card", class: "col-span-2 min-h-84 h-full" do %>
  <div class="">
    <h2 class="text-3xl">Your projects</h2>
  </div>
  <% if @projects.empty? %>
    <div class="flex flex-col items-center justify-center text-center grow space-y-6">
      <p>It's looking pretty empty...<br>You should change that!</p>
      <%= render "shared/button", url: new_project_path, text: "+ Start a project" %>
    </div>
  <% else %>
    <div class="flex space-x-6 overflow-x-auto mt-2 h-full">
      <%= render partial: "project", collection: @projects, as: :project %>
    </div>
  <% end %>
<% end %>