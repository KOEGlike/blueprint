<%= render "shared/card", class: "col-span-1 md:col-span-2 min-h-64 md:min-h-84 h-full" do %>
  <div class="">
    <h2 class="text-2xl md:text-3xl">Your projects</h2>
  </div>
  <% if @projects.empty? %>
    <div class="flex flex-col items-center justify-center text-center grow space-y-4 md:space-y-6">
      <p class="text-sm md:text-base">It's looking pretty empty...<br>You should change that!</p>
      <%= render "shared/button", url: new_project_path, text: "+ Start a project", class: "min-h-[44px]" %>
    </div>
  <% else %>
    <div class="flex space-x-4 md:space-x-6 overflow-x-auto mt-2 h-full -mx-4 px-4 md:mx-0 md:px-0">
      <%= render partial: "project", collection: @projects, as: :project %>
      <div class="flex items-center justify-center h-full flex-shrink-0">
        <%= link_to new_project_path, class: "flex items-center justify-center size-24 md:size-28 bg-hatch border-2 border-white/25 hover:bg-bp-success/20 transition-colors" do %>
          <span class="text-3xl md:text-4xl font-bold">+</span>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>